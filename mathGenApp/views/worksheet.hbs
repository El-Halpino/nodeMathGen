<h1>Worksheet Name: {{name}}</h1>
<h2>{{topic}}</h2>
<form action="/worksheet">
    <table>
        <tr>
            <th>Operand1</th>
            <th>Operand2</th>
            <th>Answer</th>
        </tr>
        {{#each numberList}}
        <tr>
            <td>{{this.randomNumber1}}</td>
            <td>{{this.randomNumber2}}</td>
            <td><input name="answer_{{this.index}}" type="number" step="0.001"></input></td>
        </tr>
        {{/each}}
    </table>
    <input type="submit" value="Submit">
</form>
<button onclick="loadHome()">Home</button>
<button onclick="loadWorksheetList()">View Worksheets</button>
<script>
    function loadHome() {
        location.replace("/home")
    }
    function loadWorksheetList() {
        location.replace("/viewWorksheets")
    }
</script>